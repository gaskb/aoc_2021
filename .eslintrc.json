{
    "extends": [
        "standard",
        "prettier"
    ],
    "plugins": [
        "prettier"
    ],
    "parser": "@babel/eslint-parser",
    "rules": {
        "no-undef": "warn",
        "no-use-before-define": "error",
        "camelcase": "off",
        "complexity": ["error", 20],
        "prettier/prettier": [
            "error",
            {
                "arrowParens": "avoid",
                "printWidth": 120,
                "tabWidth": 2,
                "singleQuote": true,
                "trailingComma": "none",
                "bracketSpacing": true,
                "parser": "flow",
                "semi": true
            }
        ]
    },
    "parserOptions": {
        "ecmaVersion": 2016,
        "sourceType": "module"
    },
    "env": {
        "es6": true,
        "node": true
    }
}
